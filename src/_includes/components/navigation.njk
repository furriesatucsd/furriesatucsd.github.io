<nav class="navbar navbar-expand-md navbar-dark" style="background-color: #00447a">
  <div class="container-fluid">
    <a href="/" class="navbar-brand d-flex align-items-center">
      <img
        src="/assets/images/top-logo.gif"
        alt="Triton Tails Logo"
        class="me-2"
        style="height: 2.5rem"
      />
      <span class="fw-bold">Triton Tails</span>
    </a>
    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarMain"
      aria-controls="navbarMain"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarMain">
      <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
        {% for item in navigation.main %} {% if item.type == "dropdown" %}
        <li class="nav-item dropdown">
          <a
            class="nav-link dropdown-toggle"
            href="#"
            role="button"
            data-bs-toggle="dropdown"
            aria-expanded="false"
          >
            {{ item.title }}
          </a>
          <ul class="dropdown-menu">
            {% for subitem in item.items %}
            <li>
              <a
                class="dropdown-item {% if page.url == subitem.url %}active{% endif %}"
                href="{{ subitem.url }}"
                {%
                if
                subitem.external
                %}target="_blank"
                {%
                endif
                %}
              >
                {{ subitem.title }}
              </a>
            </li>
            {% endfor %}
          </ul>
        </li>
        {% else %}
        <li class="nav-item">
          <a
            class="nav-link {% if page.url == item.url %}active{% endif %}"
            href="{{ item.url }}"
            {%
            if
            item.external
            %}target="_blank"
            {%
            endif
            %}
          >
            {{ item.title }}
          </a>
        </li>
        {% endif %} {% endfor %}
      </ul>
    </div>
  </div>
</nav>
