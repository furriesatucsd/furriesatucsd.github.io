<!-- Page Banner -->
<section
  class="banner text-white position-relative py-0"
  style="min-height: {{ bannerData.height | default('50vh') }}; overflow: hidden;"
>
  <!-- Full-width background image -->
  <div
    class="banner-image position-absolute w-100 h-100"
    style="background: url('{{ bannerData.background_image }}') center/cover no-repeat; filter: brightness(0.65);"
  ></div>

  <!-- Content overlay -->
  <div
    class="container-fluid position-relative h-100 d-flex align-items-center justify-content-center"
    style="z-index: 2; padding: 8rem 2rem"
  >
    <div class="row justify-content-center" style="max-width: 1200px">
      <div class="col-lg-10 col-xl-8 text-center fade-in content-visible">
        <h1 class="display-1 fw-bold mb-3">{{ bannerData.title }}</h1>
        {% if bannerData.subtitle %}
        <p class="lead fs-3 mb-{{ bannerData.subtitle_margin | default('0') }}">
          {{ bannerData.subtitle }}
        </p>
        {% endif %} {% if bannerData.extra_content %}
        <p class="fs-5 mb-0">{{ bannerData.extra_content | safe }}</p>
        {% endif %}
      </div>
    </div>
  </div>
</section>
