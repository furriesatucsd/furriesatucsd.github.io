<!-- Store CSS -->
<style>
    /* The store containing aisles */
    .store-area {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 48px;
        align-self: stretch;
    }

    .scrollable-container {
        overflow-x: auto;
        width: 100%;
    }

    /* Aisles containing rows */
    .store-aisle {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: 8px;
        align-self: stretch;
        margin-bottom: 2rem;
    }

    /* Rows of items */
    .store-row {
        display: flex;
        align-items: flex-start;
        gap: 16px;
        align-self: stretch;
    }

    /* Items */
    .store-item {
        display: flex;
        flex-direction: column;
        gap: 8px;
        transition: transform 0.3s ease;
    }
    
    .store-item:hover {
        transform: translateY(-5px);
    }

    /* Item images */
    .store-item > img {
        width: 150px;
        aspect-ratio: 1/1;
        border-radius: 16px;
        object-fit: cover;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }

    .store-row-featured img {
        width: 400px;
        aspect-ratio: 2/1;
    }

    @media (max-width: 768px) {
        .store-item > img {
            width: 100px;
        }

        .store-row-featured {
            flex-direction: column;
        }

        .store-row-featured img {
            width: 100%;
        }
    }
</style>

