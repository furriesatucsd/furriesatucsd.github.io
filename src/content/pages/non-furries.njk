<!-- Accordions -->
<section class="wrapper style1">
  <div class="inner">
    <div class="align-center">
      <h2>Common Myths & FAQs</h2>
      <p>Here are some common questions we get from non-furries:</p>
    </div>
    <div class="accordion" id="nonFurryAccordion">
      {% for faq in faqs %}
      <div class="card">
        <div class="card-header" id="heading{{ loop.index }}">
          <h2 class="mb-0">
            <button
              class="btn btn-link btn-block text-left collapsed"
              type="button"
              data-toggle="collapse"
              data-target="#collapse{{ loop.index }}"
              aria-expanded="false"
              aria-controls="collapse{{ loop.index }}"
            >
              {{ faq.question }}
            </button>
          </h2>
        </div>
        <div
          id="collapse{{ loop.index }}"
          class="collapse"
          aria-labelledby="heading{{ loop.index }}"
          data-parent="#nonFurryAccordion"
        >
          <div class="card-body">
            {% for paragraph in faq.answer.split('\n\n') %}
            <p>{{ paragraph }}</p>
            {% endfor %}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

