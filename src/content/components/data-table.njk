<!-- Data Table -->
<section class="py-5 {{ perksData.background_class | default('') }}">
  <div class="container{{ perksData.container_fluid | default('') }} fade-in">
    <div class="row justify-content-center">
      <div class="col-lg-{{ perksData.col_width | default('10') }}">
        {% if perksData.title %}
        <h2 class="display-5 fw-bold text-center mb-4">{{ perksData.title }}</h2>
        {% endif %} {% if perksData.description %}
        <p class="lead text-center mb-5">{{ perksData.description }}</p>
        {% endif %}

        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="table-primary">
              <tr>
                {% for header in perksData.headers %}
                <th scope="col">{{ header }}</th>
                {% endfor %}
              </tr>
            </thead>
            <tbody>
              {% for row in perksData.data %}
              <tr>
                {% for cell in row %}
                <td>{{ cell }}</td>
                {% endfor %}
              </tr>
              {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</section>
